{
        "languageserver": {
                "qml": {
                        "filetypes": ["qml"],
                        "command": "qml-lsp"
                },
                "python": {
                    "filetypes": ["python"],
                    "command": "python",
                    "args": ["-mpylsp", "-vv", "--log-file", "/tmp/lsp_python.log"],
                    "settings": {
                    }
                },
                "dart": {
                        "filetypes": ["dart"],
                        "command": "dart",
                        "args": ["language-server"],
                         "initializationOptions": {
                             "onlyAnalyzeProjectsWithOpenFiles": true
                         }
                },
                "clangd": {
                    "command": "clangd",
                    "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
                    "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
                }
        },
        "coc.preferences.formatOnSaveFiletypes": ["python", "dart", "cpp", "json"],
        "suggest.autoTrigger": "none",
        "suggest.noselect": false,
        "explorer.width": 30,
        "explorer.buffer.root.template": "[icon & 1] OPENED EDITORS",
        "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
        "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
        "explorer.file.showHiddenFiles": true,
        "explorer.file.reveal.auto": false,
        "explorer.previewAction.onHover": false,
        "explorer.icon.enableNerdfont": false,
        "explorer.buffer.tabOnly": true,
        "diagnostic.virtualTextCurrentLineOnly": true,
        "diagnostic.messageTarget": "echo",
        "explorer.keyMappings.global": {
                "<Left>": [
                        "wait",
                        "collapse"
                ],
                "<Right>": [
                        "wait",
                        "expandable?",
                        "expand",
                        "open"
                ]
        }
}
